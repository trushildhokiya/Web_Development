<%- include("header") -%>
    <div class="box" id="heading">
         <h1><%=listTitle%></h1>
    </div>
   
    <div class="box">
       <% myTask.forEach(function(tasks){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%=tasks._id%>" onChange="this.form.submit()">
                <p> <%=tasks.name%></p>
            </div>
        </form>
            
       <% }) %>
        
        
        <form class="item" action="/" method="post">
            <input type="text" name="dailyTask" id="dailyTask" placeholder="Add new tasks ..." autocomplete="off">
            <button type="submit" name="list" value="<%=listTitle%>">
                <span class="xs material-symbols-outlined">
                    add
                </span>
            </button>
        </form>
    </div>
<%- include("footer") -%>